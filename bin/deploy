#!/bin/sh

set -eu

while :; do
  while getopts ":a:e:r:t:" arg; do
    case $arg in
      a)
        auth_file_key="$OPTARG"
        ;;
      e) 
        enc_auth_file="$OPTARG"
        ;;
      r)
        run_tests="$OPTARG"
        ;;
      t)
        test_level="$OPTARG"
        ;;
      *)
        echo Ignoring unknown option: $OPTARG
        ;;
    esac
  done
  OPTIND=$((OPTIND+1))
  [ $OPTIND -gt $# ] && break
done

if [ "${test_level}" = "RunSpecifiedTests" ] && [ "${run_tests}" = "NotSet" ]
then
	echo "ERROR: Please specify Apex unit tests with run_tests argument"
	exit 1
fi

# Decrypt Auth URL File
openssl enc -d -aes-256-cbc -in ${enc_auth_file} -out auth_url.txt -k ${auth_file_key}

# Authenticate DevHub Org
sfdx force:auth:sfdxurl:store -f auth_url.txt -d -a TargetOrg && rm auth_url.txt

# Run deployment
if [ "${test_level}" = "RunSpecifiedTests" ]
then
  sfdx force:source:deploy -p force-app -u TargetOrg -l ${test_level} -r ${run_tests} -w -1
else
  sfdx force:source:deploy -p force-app -u TargetOrg -l ${test_level} -w -1
fi